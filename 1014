void main() {
  int n = 5;

  for (int r = 0; r < n; r++) {
    String line = ''; // í•œ ì¤„ ì „ì²´ë¥¼ ë‹´ì„ ë¬¸ìì—´

    for (int c = 0; c < n; c++) {
      if (r == c || r + c == n - 1) {
        line += '#';
      } else {
        line += ' ';
      }
    }

    print(line); // í•œ ì¤„ ì „ì²´ ì¶œë ¥
  }
