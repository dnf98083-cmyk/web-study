class TwoSquares extends StatelessWidget {
  final double size; // ê° ì‘ì€ ì •ì‚¬ê°í˜• í•œ ë³€ ê¸¸ì´
  final Color leftColor;
  final Color rightColor;
  const TwoSquares({
    super.key,
    this.size = 50,
    this.leftColor = Colors.red,
    this.rightColor = Colors.yellow,
  });

  @override
  Widget build(BuildContext context) {
    return Row(
      children: [
        Expanded(child: Center(child: SizedBox.square(dimension: size, child: Container(color: leftColor)))),
        Expanded(child: Center(child: SizedBox.square(dimension: size, child: Container(color: rightColor)))),
      ],
    );
  }
}

class Demo4 extends StatelessWidget {
  const Demo4({super.key});
  @override
  Widget build(BuildContext context) {
    return Center(
      child: Container(
        width: 100, height: 100, color: Colors.blue,
        child: Column(
          children: const [
            Expanded(child: TwoSquares(size: 40, leftColor: Colors.red, rightColor: Colors.yellow)),
            Expanded(child: TwoSquares(size: 40, leftColor: Colors.green, rightColor: Colors.orange)),
          ],
        ),
      ),
    );
  }
}
