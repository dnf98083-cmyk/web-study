void main() {
  drawXWithBorder(7); // nì„ 5, 7, 9 ë“±ìœ¼ë¡œ ë°”ê¿”ë³´ì„¸ìš”
}

void drawXWithBorder(int n) {
  if (n < 2) {
    print('nì€ 2 ì´ìƒì´ì–´ì•¼ í•©ë‹ˆë‹¤.');
    return;
  }

  for (int r = 0; r < n; r++) {
    final line = StringBuffer();
    for (int c = 0; c < n; c++) {
      final bool isBorder = (r == 0 || r == n - 1 || c == 0 || c == n - 1);

      if (isBorder) {
        // í…Œë‘ë¦¬ ë¬¸ì ì„¸ë¶„í™” (ëª¨ì„œë¦¬/ê°€ë¡œ/ì„¸ë¡œ)
        final bool isCorner = (r == 0 || r == n - 1) && (c == 0 || c == n - 1);
        if (isCorner) {
          line.write('+');
        } else if (r == 0 || r == n - 1) {
          line.write('-');
        } else {
          line.write('|');
        }
      } else if (r == c || r + c == n - 1) {
        // ë‚´ë¶€ Xì
        line.write('#');
      } else {
        // ë‚´ë¶€ ë¹ˆì¹¸ (ê°€ë…ì„± ìœ„í•´ ê³µë°±. í•„ìš”í•˜ë©´ '.'ë¡œ êµì²´)
        line.write(' ');
      }
    }
    print(line.toString());
  }
}
